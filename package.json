{
  "name": "@cicada-lang/partech",
  "version": "0.1.22",
  "repository": "github:cicada-lang/partech",
  "main": "lib/main.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "npx tsc",
    "build:watch": "npx tsc --watch",
    "format": "npx prettier src --write",
    "test:js": "test-runner test node 'lib/**/*.test.js'",
    "test:snapshot": "test-runner snapshot node 'lib/**/*.snapshot.js' --extern snapshot",
    "test:lex-default": "./bin/partech.js lex tests/tables/example.table.js --output tests/tables/default.tokens.json",
    "test:lex-example": "./bin/partech.js lex tests/tables/example.table.js --table tests/tables/example.table.js --output tests/tables/example.tokens.json",
    "test": "npm run test:js && npm run test:snapshot && npm run test:lex-default && npm run test:lex-example"
  },
  "bin": {
    "partech": "bin/partech.js"
  },
  "devDependencies": {
    "@types/assert": "^1.5.6",
    "@types/fs-readdir-recursive": "^1.1.0",
    "@types/js-yaml": "^4.0.5",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^18.11.7",
    "@xieyuheng/test-runner": "^0.2.7",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.1.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@types/deep-diff": "^1.0.1",
    "change-case": "^4.1.2",
    "deep-diff": "^1.0.2",
    "fast-deep-equal": "^3.1.3",
    "fast-glob": "^3.2.12",
    "fs-readdir-recursive": "^1.1.0",
    "js-yaml": "^4.1.0",
    "picocolors": "^1.0.0",
    "portfinder": "^1.0.32",
    "readdirp": "^3.6.0",
    "regexp-match-indices": "^1.0.2",
    "yargs": "^17.6.0"
  },
  "license": "GPL-3.0-or-later"
}
